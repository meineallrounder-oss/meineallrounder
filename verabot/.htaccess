# Protect .env file
<Files ".env">
    Order allow,deny
    Deny from all
</Files>

# Protect config.php (optional - uncomment if you want to restrict access)
# <Files "config.php">
#     Order allow,deny
#     Deny from all
# </Files>

# Allow API access
<Files "api.php">
    Order allow,deny
    Allow from all
</Files>

# Allow CSS and JS files to be accessed
<FilesMatch "\.(css|js)$">
    Order allow,deny
    Allow from all
</FilesMatch>

# Set proper MIME types
<IfModule mod_mime.c>
    AddType text/css .css
    AddType application/javascript .js
</IfModule>

